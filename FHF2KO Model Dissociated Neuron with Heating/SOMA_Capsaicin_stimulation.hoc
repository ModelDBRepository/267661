soma_stim.onset = 500
soma_stim.tau_act = 2e6
soma_stim.tau_inact = 1000
soma_stim.gmax = 1200   // original 250    was 150 on 10/22
soma_stim.X = 1e-6
soma_stim.pump = 1700  // original 1200

stem.Ra=100000000000  // isolates the soma from the rest of the neuron

